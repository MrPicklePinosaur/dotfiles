#!/bin/sh

openlink() {
    [ -z "$BROWSER" ] && exit 1
    $BROWSER "$1"
}

link=$(echo "$2" | grep -P "https?:\/\/(www\.)?[-a-zA-Z0-9@:%._\+~#=]{1,256}\.[a-zA-Z0-9()]{1,6}\b([-a-zA-Z0-9()@:%_\+.~#?&\//=]*)") >/dev/null 2>&1
[ -n "$link" ] && openlink "$link" && notify-send -i "ïƒ" "Opening Link: $link"



